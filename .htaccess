# منع عرض قائمة الملفات
Options -Indexes

<IfModule mod_rewrite.c>
  RewriteEngine On

  # نقيّد الوصول إلى index.html فقط إن كان Referer من موقعك
  RewriteCond %{REQUEST_URI} ^/questions-bank/index\.html$ [NC]
  RewriteCond %{HTTP_REFERER} !^https?://(www\.)?viatosis\.wuaze\.com/questions-bank/? [NC]
  RewriteRule ^.*$ - [F,L]
</IfModule>
