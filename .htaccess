# منع عرض قائمة الملفات
Options -Indexes

<IfModule mod_rewrite.c>
  RewriteEngine On

  # امنع الهوت-لينك للملفات الثابتة من خارج موقعك
  # اسمح للحالات بلا Referer (طلبات مباشرة) واسمح لدومينك
  RewriteCond %{REQUEST_URI} \.(jpg|jpeg|png|gif|webp|svg|css|js|json)$ [NC]
  RewriteCond %{HTTP_REFERER} !^$ 
  RewriteCond %{HTTP_REFERER} !^https?://(www\.)?viatosis\.ar\.nf/ [NC]
  RewriteRule .* - [F,L]
</IfModule>

# (اختياري) إلغاء الكاش لملفات JS/JSON حتى تشوف التغييرات فورًا
# إذا أعطى 500 في استضافتك احذف هذا القسم فقط
<IfModule mod_headers.c>
  <FilesMatch "\.(js|json)$">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires "0"
  </FilesMatch>
</IfModule>
