# منع عرض قائمة الملفات
Options -Indexes

<IfModule mod_rewrite.c>
  RewriteEngine On

  # السماح لو الـ Referer فارغ أو من موقعك فقط
  # (InfinityFree لا يدعم [AND] ولا صيغة متقدمة)
  RewriteCond %{REQUEST_FILENAME} \.(jpg|jpeg|png|gif|webp|svg|css|js|json)$ [NC]
  RewriteCond %{HTTP_REFERER} !^$ 
  RewriteCond %{HTTP_REFERER} !^https?://(www\.)?viatosis\.ar\.nf/ [NC]
  RewriteRule .* - [F,L]
</IfModule>

# منع الكاش لملفات JS و JSON (صيغة أبسط)
<IfModule mod_headers.c>
  <FilesMatch "\.(js|json)$">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires "0"
  </FilesMatch>
</IfModule>
